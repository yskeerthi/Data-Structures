#include<stdio.h>
#include<stdlib.h>
struct node {
	float coeff;
	int expo;
	struct node *next;
	
};
typedef struct node NODE;
NODE* insert_at_term(NODE *head,float co,int ex)
{
	NODE *nn=(NODE *)malloc(sizeof(NODE));
	nn->coeff=co;
	nn->expo=ex;
	nn->next=NULL;
	if(head==NULL)
	{
		head=nn;
	}
	else
	{
		NODE *temp=head;
		while(temp->next!=NULL)
		{
			temp=temp->next;
		}
		temp->next=nn;
	}
	return head;
}
void display_polynomial(NODE *head)
{
	NODE *temp=head;
	while(temp!=NULL)
	{
		printf("(%.1fx^%d)",temp->coeff,temp->expo);
		if(temp->next!=NULL)
		{
			printf("+");
		}
		else
		{
			printf("\n");
		}
	}
}
NODE* create_polynomial(){
	NODE *head=NULL;
	int n;
	printf("Enter the no of terms in a polynomial:\n");
	scanf("%d",&n);
	for(int i=1;i<=n;i++)
	{
		float co;
		int ex;
		printf("Enter coeff for term %d:",i);
		scanf("%f",&co);
		printf("Enter expon of term %d: ",i);
		scanf("%d",&ex);
		head=insert_at_term(head,co,ex);
	}
	return head;
}
int main()
{
	printf("polynomial:\n");
	NODE *poly=create_polynomial();
	display_polynomial(poly);
}
